<div class="comment">
	<p class="lead"><%= comment.body%> 
		<small>Submitted by <%= link_to comment.commenter, user_path(comment.user) %>
			<% if comment.user == current_user %>
				<%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: "Are you sure?" } %>
			<% end %>
		</small>			
	</p>
</div>