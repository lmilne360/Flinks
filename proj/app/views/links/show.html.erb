<%= @link.title %> <br>
tags: <%= @link.try(:all_tags) %> <br>

<%= @link.comments.size %> Comments <br>

<% @link.comments.each do |comment| %>
	<%= comment.body %> by <%= comment.commenter %> <br>
<% end %>


<%= form_for @link.comments.build do |f| %>
	<%= f.hidden_field :link_id %>
	<%= f.text_area :body %>
	<%= f.submit "Add Comment" %>	
<% end %>