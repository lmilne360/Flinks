<div class="link_title">
<h2><%= @link.title%><h2>
</div>

<% if @link.user == current_user %>
<%= link_to 'Edit', edit_link_path(@link) %>
<% end %><br>

tags: <%= @link.try(:all_tags) %> <br>

<%= @link.comments.size %> Comments <br>
<div id="comments">
<% @link.comments.each do |comment| %>
	<%= render comment %>
<% end %>
</div>

<%= form_for @link.comments.build do |f| %>
	<%= f.hidden_field :link_id %>
	<%= f.text_area :body %> <br>
	<%= f.submit "Add Comment", class: "btn btn-secondary"%>	
<% end %>
